<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.soft1841.spy.SpyController"
            prefHeight="400.0" prefWidth="600.0"
            fx:id="mainContainer">
    <top>
        <Label text="特工名单"/>
    </top>
    <left>
        <VBox spacing="50">
            <Button text="princess" onAction="#showPrincess"/>
            <Button text="boss" onAction="#showBoss1"/>
            <Button text="boss留言" onAction="#showBoss"/>
            <padding>
                <Insets top="20" left="20"/>
            </padding>
        </VBox>
    </left>
    <center>
        <StackPane>
            <VBox fx:id="bossBox" visible="false" spacing="20">
                <padding>
                    <Insets top="20" left="100"/>
                </padding>
            </VBox>
            <padding>
                <Insets top="20" left="200"/>
            </padding>

            <FlowPane fx:id="spyPane" visible="true" hgap="20">
            </FlowPane>
            <padding>
                <Insets top="30" left="50"/>
            </padding>

            <VBox fx:id="bossBox1" visible="false" spacing="20">
                <padding>
                    <Insets top="20" left="100"/>
                </padding>
            </VBox>
            <padding>
                <Insets top="20" left="200"/>
            </padding>
        </StackPane>
    </center>
</BorderPane>
